<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/r1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_weight="12"
        app:layout_constraintHorizontal_bias="0.40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/r2"/>
    <Button
        android:id="@+id/r2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintHorizontal_weight="6"

        app:layout_constraintLeft_toRightOf="@+id/r1"
        app:layout_constraintBaseline_toBaselineOf="@+id/r1"
        app:layout_constraintRight_toLeftOf="@+id/r3"/>
    <Button
        android:id="@+id/r3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3"
        app:layout_constraintHorizontal_weight="6"
        app:layout_constraintLeft_toRightOf="@+id/r2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/r1"
        android:background="@drawable/rectangle_button"/>


</androidx.constraintlayout.widget.ConstraintLayout>



